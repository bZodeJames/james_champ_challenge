<div class="form-group">
    <%= form_with(model: post, local: true) do |form| %>
      <% if post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
          <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="content">
        <%= form.text_field :title, id: :post_title, placeholder: :title, class: "form-input" %>
      </div>

      <div class="content">
        <%= form.text_area :body, id: :post_body, placeholder: :body, class: "form-input" %>
      </div>

      <div class="content">
        <%= form.label :published, class: "form-radio" %>
        <%= form.check_box :published, id: :post_published, class: "form-icon" %>
      </div>

      <div class="actions">
        <%= form.submit 'Submit Post', class: 'btn btn-primary' %>
      </div>
    <% end %>
</div>