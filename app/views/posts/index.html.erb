<%# <%= react_component('Posts', posts: @posts) %>


<p id="notice"><%= notice %></p>

<h1>Posts
  <%= link_to 'New Post', new_post_path, class: "btn btn-dark float-right" %>
</h1>

<table class="table table-stripped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Published</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.body %></td>
        <td><%= post.published %></td>
        <td>
            <div class="dropdown">
              <a href="#" class="btn btn-link dropdown-toggle" tabindex="0">
                <span class="btn btn-primary">Options</span>
              </a>
              
              <ul class="menu">
                  <li><%= link_to 'Edit', edit_post_path(post) %></li>
                  <li><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              </ul>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


